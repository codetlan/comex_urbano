<%= form_for(@about, html: {role: "form", class: "form-horizontal validate-form-js"}) do |f| %>
  <% if @about.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@about.errors.count, "error") %> prohibited this about from being saved:</h2>

      <ul>
      <% @about.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="form-group">
    <%= f.label :name, 'Titulo: <i class="rqrd">*</i>'.html_safe, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: 'form-control', required: true %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :description, 'Contenido: <i class="rqrd">*</i>'.html_safe, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_area :description, class: 'form-control ckeditor', required: true %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= link_to 'Cancelar', '/admin/abouts', class: "btn btn-default" %>
      <button type="submit" class="btn btn-primary">Publicar</button>
    </div>
  </div>
<% end %>
