<div class="section-heading">
  <div class="wrapper">
    <div class="cols-12">
      <div class="col col-12">
        <div class="col-inner">
          <%= image_tag 'about/header.jpg' %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="about-page">
  <div class="about-page-intro">
    <div class="wrapper">
      <div class="cols-12">
        <div class="col col-12">
          <div class="col-inner">
            <% @abouts.each_with_index do |about, index| %>
                <% if index == 0 %>
                    <div class="title-page">
                      <h1><%= about.name %></h1>
                    </div>
                    <%= about.description.html_safe %>
                <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="main-content">
    <div class="wrapper">
      <div class="cols-12">
        <div class="col col-9">
          <div class="col-inner">
            <% @abouts.each_with_index do |about, index| %>
                <% if index == 1 %>
                    <div class="title-page">
                      <h1 class="title"><%= about.name %></h1>
                    </div>
                    <%= about.description.html_safe %>
                <% end %>
            <% end %>
          </div>
        </div>
        <div class="col col-3">
          <div class="col-inner">
            <div class="sidebar">
              <%= render partial: 'shared/latest_videos', locals: { videos: false, banners: true } %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
