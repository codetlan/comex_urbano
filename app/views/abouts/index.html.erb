<% @abouts.each do |about| %>
    <% set_meta_tags title: about.name,
                     description: about.description,
                     og: {
                             title: '¿QUÉ ES URBANO?',
                             description: truncate_html(about.description.html_safe),
                             url: request.original_url,
                             image: about.image.url(:original),
                     }
    %>

    <div class="section-heading" style="background-image: url(<%= about.image.url(:original) %>)"></div>

    <div class="main-content">
      <div class="wrapper">
        <div class="cols-12">
          <div class="col col-9">
            <div class="col-inner">
              <div class="post-show-content">
                <%= render partial: 'shared/post_share_links', locals: {url: request.original_url, text: about.name, media_url: about.image.url(:original)} %>
                <h1 class="post-show-title"><%= about.name %></h1>
                <br>

                <p><%= about.description %></p>

                <%= render partial: 'shared/post_share_links', locals: {url: request.original_url, text: about.name, media_url: about.image.url(:original)} %>

              </div>
            </div>
          </div>
          <div class="col col-3">
            <div class="col-inner">
              <div class="sidebar">
                <%= render partial: 'shared/youtube_subscribe' %>
                <%= render partial: 'shared/latest_videos', locals: {videos: false, banners: true} %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
<% end %>

<%= render partial: 'shared/similar_publications' %>