<div class="clearfix admin-head">
  <div class="pull-left">
    <h1>Acerca de</h1>
  </div>
</div>

<% @abouts.each do |about| %>
  <div><%= image_tag about.image.url(:original) %></div><br/>
  <h3><%= about.name %></h3>
  <%= truncate(strip_tags(about.description.html_safe), length: 200, omission: '... (continua)') %>
  <br>
  <div class="btn-group btn-group-xs">
    <%= link_to edit_about_path(about), class: "btn btn-default btn-lg" do %>
      <span class="glyphicon glyphicon-pencil"></span> Editar
    <% end %>
  </div>
  <br><br><br>
<% end %>
