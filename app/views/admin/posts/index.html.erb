<h1>Listing posts</h1>

<%= form_tag admin_posts_path, :method => 'get', :id => 'posts_search' do %>
    <p>
      <%= text_field_tag :search, params[:search] %>
      <%= submit_tag "Search", :name => nil %>
    </p>
<% end %>

<div id="posts"><%= render 'posts' %></div>

<%= link_to 'New Post', new_admin_post_path %>
