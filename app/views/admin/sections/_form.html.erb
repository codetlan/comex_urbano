<%= form_for([:admin, @section]) do |f| %>
    <% if @section.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@section.errors.count, "error") %> prohibited this section from being saved:</h2>

          <ul>
            <% @section.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :title %>
      <br>
      <%= f.text_field :title %>
    </div>
    <div class="field">
      <%= f.label :description %>
      <br>
      <%= f.text_area :description %>
    </div>
    <div class="field">
      <%= f.label :main_banner %>
      <br/>
      <%= f.file_field :main_banner %>
    </div>
    <div class="field">
      <%= f.label :secondary_banner %>
      <br/>
      <%= f.file_field :secondary_banner %>
    </div>
    <div class="field">
      <%= f.label :category_id %>
      <br>
      <%= f.select :category_id, Category.all.collect {|p| [p.name, p.id]} %>
    </div>
    <div class="field">
      <%= f.label :active %>
      <br>
      <%= f.number_field :active %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>
