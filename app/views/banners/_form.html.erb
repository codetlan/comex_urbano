<%= form_for(@banner, html: {role: "form", class: "form-horizontal validate-form-js"}) do |f| %>
    <% if @banner.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@banner.errors.count, "error") %> prohibited this post from being saved:</h2>

          <ul>
            <% @banner.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="form-group">
      <%= f.label :photo, 'Banner: <i class="rqrd">*</i>'.html_safe, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.file_field :photo, :class => 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :link, 'Link: <i class="rqrd">*</i>'.html_safe, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :link, class: 'form-control', required: true, url: 'true' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :position, 'Tipo: <i class="rqrd">*</i>'.html_safe, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <div class="radio">
          <label>
            <%= f.radio_button :position, 1, required: true %>
            Vertical
          </label>
        </div>
        <div class="radio">
          <label>
            <%= f.radio_button :position, 0, required: true %>
            Horizontal
          </label>
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :orden, 'PosiciÃ³n: <i class="rqrd">*</i>'.html_safe, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.number_field :orden, class: 'form-control', required: true %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= link_to 'Cancelar', banners_path, class: "btn btn-default" %>
        <button type="submit" class="btn btn-primary">Publicar Entrada</button>
      </div>
    </div>
<% end %>