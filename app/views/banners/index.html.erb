<div class="clearfix admin-head">
  <div class="pull-left">
    <h1>Banners</h1>
    <p>Sube nuevos banners al sitio web.</p>
  </div>
  <div class="pull-right">
    <!--< if can? :create, Banner %>-->
        <%= link_to new_banner_path, class: "btn btn-primary" do %>
            <span class="glyphicon glyphicon-plus"></span>Nueva entrada
        <% end %>
    <!--< end %>-->
  </div>
</div>

<table class="table table-striped table-hover">
  <thead>
  <tr>
    <th>Banner</th>
    <th>link</th>
    <th>Posicion</th>
    <th>Orden</th>
    <th></th>
  </tr>
  </thead>

  <tbody>
  <% @banners.each do |banner| %>
      <tr>
        <td><%= image_tag banner.photo.url(:thumb) %></td>
        <td><%= banner.link %></td>
        <td><%= banner.position == 1 ? 'Vertical' : 'Horizontal'  %></td>
        <td><%= banner.orden %></td>
        <td>
          <div class="btn-group btn-group-xs">
            <!--< if can? :update, post %> -->
                <%= link_to edit_banner_path(banner), class: "btn btn-default btn-lg" do %>
                    <span class="glyphicon glyphicon-pencil"></span>
                <% end %>
            <!---< end %>-->

            <!--< if can? :destroy, post %>-->
                <%= link_to banner, method: :delete, data: {confirm: 'Are you sure?'}, class: "btn btn-default btn-lg" do %>
                    <span class="glyphicon glyphicon-trash"></span>
                <% end %>
            <!--< end %>-->
          </div>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>

