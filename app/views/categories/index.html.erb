<p id="notice"><%= notice %></p>

<div class="clearfix admin-head">
  <div class="pull-left">
    <h1>Menu</h1>

    <p>Opciones del Menu.</p>
  </div>
  <div class="pull-right">
    <% if can? :create, Category %>
        <%= link_to new_category_path, class: "btn btn-primary" do %>
            <span class="glyphicon glyphicon-pencil">Nuevo</span>
        <% end %>
    <% end %>
  </div>
</div>


<table class="table table-striped table-hover">
  <thead>
  <tr>
    <th>Nombre</th>
    <th>Ruta</th>
    <th>Orden</th>
    <th>Activo</th>
    <th></th>
  </tr>
  </thead>

  <tbody>
  <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td>/<%= category.link %></td>
        <td><%= category.position %></td>
        <td><%= category.active == 1 ? 'Si' : 'No' %></td>
        <td>
          <div class="btn-group btn-group-xs">
            <% if can? :update, Category %>
                <%= link_to edit_category_path(category), class: "btn btn-default btn-lg" do %>
                    <span class="glyphicon glyphicon-pencil"></span>
                <% end %>
            <% end %>
            <% if can? :destroy, Category %>
                <%= link_to category, method: :delete, data: {confirm: 'Are you sure?'}, class: "btn btn-default btn-lg" do %>
                    <span class="glyphicon glyphicon-trash"></span>
                <% end %>
            <% end %>
          </div>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>
