<div class="comming-soon">
  <div class="comming-soon-header">
    <div class="social-links">
      <ul>
        <% home_details.each do |landing_page| %>
            <li><%= link_to image_tag('fb.png'), landing_page.facebook, :target => '_blank' %></li>
            <li><%= link_to image_tag('youtube.png'), landing_page.youtube, :target => '_blank' %></li>
            <li><%= link_to image_tag('instagram.png'), landing_page.vimeo, :target => '_blank' %></li>
        <% end %>
      </ul>
    </div>
    <div class="comex-brand">
      <%= link_to 'http://www.comex.com.mx/', target: "_blank" do %>
          <%= image_tag 'comex-logo.png' %>
      <% end %>
    </div>
  </div>

  <div class="comming-soon-content">
    <div class="error-page">
      <%= image_tag 'error.png', class: 'error-icon' %>
