<div class="hero-intro">
  <div class="wrapper">
    <div class="cols-12">
      <div class="col col-12">
        <div class="col-inner">
          <div class="slider">
            <% home_details.each do |landing_page| %>
                <% landing_page.images.each do |banner| %>
                    <div class="featured-post">
                      <div class="image">
                        <%= link_to banner.link do %>
                            <%= image_tag banner.photo.url(:principal) %>
                        <% end %>
                      </div>
                      <div class="description">
                        <div class="category">
                          <%= link_to banner.link do %>
                              <p><%= banner.name %></p>
                          <% end %>
                        </div>
                        <div class="title">
                          <%= link_to banner.link do %>
                              <p><%= banner.description %></p>
                          <% end %>
                        </div>
                      </div>
                    </div>
                <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="filters-wrap">
  <div class="wrapper">
    <div class="cols-12">
      <div class="col col-12">
        <div class="col-inner">
          <div class="filters">
            <div class="page-navigation">
              <ul>
                <li>
                  <%= link_to 'Ultimos videos', '/', class: request.fullpath == '/' ? 'active' : '' %>
                </li>
                <li>
                  <%= link_to 'Más vistos', root_path(:visit => true), class: @visit == 'true' ? 'active' : '' %>
                </li>
              </ul>
            </div>
            <div class="years-timeline">
              <ul>
                <li>
                  <%= link_to '2014', root_path(:year => 2014), class: @year == '2014' ? 'active' : '' %>
                </li>
                <li>
                  <%= link_to '2013', root_path(:year => 2013), class: @year == '2013' ? 'active' : '' %>
                </li>
                <li>
                  <%= link_to '2012', root_path(:year => 2012), class: @year == '2012' ? 'active' : '' %>
                </li>
                <li>
                  <%= link_to '2011', root_path(:year => 2011), class: @year == '2011' ? 'active' : '' %>
                </li>
                <li>
                  <%= link_to '2010', root_path(:year => 2010), class: @year == '2010' ? 'active' : '' %>
                </li>
                <li>
                  <%= link_to '2009', root_path(:year => 2009), class: @year == '2009' ? 'active' : '' %>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="main-content">
  <div class="wrapper">
    <div class="cols-12">
      <div class="col col-9">
        <div class="col-inner">
          <div class="title-page">
            <h1>Lo nuevo</h1>
          </div>

          <div class="search-result-section">
            <div class="search-result-section-title">
              <h4>Videos</h4>
            </div>
            <div class="posts-list">
              <% @videos.first(3).each do |video| %>
                  <div class="post">
                    <div class="post-image">
                      <%= link_to '#' do %>
                          <iframe width="100%" height="100%" src="<%= video.link_embed(video.link) %>?&showinfo=0&autohide=1"></iframe>
                      <% end %>
                    </div>
                    <div class="post-description">
                      <div class="post-va">
                        <a href="#" class="post-title"><%= video.name %></a>
                        <span class="post-date"><%= blog_date video.posted_at %></span>

                        <p><%= truncate_html(video.description) %></p>
                        <a class="post-read-more" href="videos/<%= video.id.to_s %>">Leer más</a>
                      </div>
                    </div>
                  </div>
              <% end %>
            </div>
          </div>

          <div class="search-result-section">
            <div class="search-result-section-title">
              <h4>Galería</h4>
            </div>
            <div class="posts-list">
              <% @photos.first(3).each do |photo| %>
                  <div class="post">
                    <div class="post-image">
                      <%= link_to '#' do %>
                          <%= image_tag photo.image.url(:post) %>
                      <% end %>
                    </div>
                    <div class="post-description">
                      <div class="post-va">
                        <a href="#" class="post-title"><%= photo.name %></a>
                        <span class="post-date"><%= blog_date photo.posted_at %></span>

                        <p><%= truncate_html(photo.description, 100, '') %></p>
                        <a class="post-read-more" href="photos/<%= photo.id.to_s %>">Leer más</a>
                      </div>
                    </div>
                  </div>
              <% end %>
            </div>
          </div>

          <div class="search-result-section">
            <div class="search-result-section-title">
              <h4>Blog</h4>
            </div>
            <div class="posts-list">
              <% @posts.first(3).each do |post| %>
                  <div class="post">
                    <div class="post-image">
                      <%= link_to '#' do %>
                          <%= image_tag post.image.url(:post) %>
                      <% end %>
                    </div>
                    <div class="post-description">
                      <div class="post-va">
                        <a href="#" class="post-title"><%= post.title %></a>
                        <span class="post-date"><%= blog_date post.posted_at %></span>

                        <p><%= truncate_html(post.introduction) %></p>
                        <a class="post-read-more" href="posts/<%= post.id.to_s %>">Leer más</a>
                      </div>
                    </div>
                  </div>
              <% end %>
            </div>
          </div>


        </div>
      </div>
      <div class="col col-3">
        <div class="col-inner">
          <div class="sidebar">
            <%= render partial: 'shared/youtube_subscribe' %>
            <%= render partial: 'shared/latest_videos', locals: {videos: true, banners: true} %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
