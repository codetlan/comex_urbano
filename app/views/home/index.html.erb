<div class="hero-intro">
  <div class="wrapper">
    <div class="cols-12">
      <div class="col col-12">
        <div class="col-inner">
          <div class="slider">
            <% @landing_pages.each do |landing_page| %>
                <% landing_page.images.each do |banner| %>
                    <div class="featured-post">
                      <div class="image">
                        <%= link_to banner.link do %>
                            <i class="i play"></i>
                            <%= image_tag banner.photo.url(:original) %>
                        <% end %>
                      </div>
                      <div class="description">
                        <div class="category">
                          <%= link_to banner.link do %>
                              <p><%= banner.name %></p>
                          <% end %>
                        </div>
                        <div class="title">
                          <%= link_to banner.link do %>
                              <p><%= banner.description %></p>
                          <% end %>
                        </div>
                      </div>
                    </div>
                <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="filters-wrap">
  <div class="wrapper">
    <div class="cols-12">
      <div class="col col-12">
        <div class="col-inner">
          <div class="filters">
            <div class="page-navigation">
              <ul>
                <li>
                  <%= link_to 'Ultimos videos', '#', class: 'active' %>
                </li>
                <li>
                  <%= link_to 'Más vistos', '#' %>
                </li>
              </ul>
            </div>
            <div class="years-timeline">
              <ul>
                <li>
                  <%= link_to '2014', '#', class: 'active' %>
                </li>
                <li>
                  <%= link_to '2013', '#' %>
                </li>
                <li>
                  <%= link_to '2012', '#' %>
                </li>
                <li>
                  <%= link_to '2011', '#' %>
                </li>
                <li>
                  <%= link_to '2010', '#' %>
                </li>
                <li>
                  <%= link_to '2009', '#' %>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="main-content">
  <div class="wrapper">
    <div class="cols-12">
      <div class="col col-9">
        <div class="col-inner">
          <div class="title-page">
            <h1>Lo nuevo</h1>
          </div>
          <div class="posts-list">
            <% @posts.each do |post| %>
                <div class="post">
                  <div class="post-image">
                    <%= link_to '/posts/'+post.id.to_s do %>
                        <%= image_tag post.image.url %>
                    <% end %>
                  </div>
                  <div class="post-description">
                    <div class="post-va">
                      <a href="/posts/<%= post.id.to_s %>" class="post-title"><%= post.title %></a>
                      <span class="post-date">11 sep 2014</span>

                      <p><%= truncate_html(post.introduction, 189, '-') %></p>
                      <a class="post-read-more" href="/posts/<%= post.id.to_s %>">Leer más</a>
                    </div>
                  </div>
                </div>
            <% end %>
          </div>
        </div>
      </div>
      <div class="col col-3">
        <div class="col-inner">
          <div class="sidebar">
            <%= render partial: 'shared/youtube_subscribe' %>
            <div class="side-lastest-videos">
              <div class="label-videos">
                <h6>Últimos</h6>
              </div>
              <% @videos.each do |video| %>
                  <div class="video-box">
                    <div class="video">
                      <%= link_to '#' do %>
                          <!--<i class="i play"></i>--<
                          <!--<= image_tag 'placeholder/vid1.jpg' %>-->
                          <iframe width="100%" height="100%" src="<%= video.link_embed(video.link) %>?&showinfo=0&autohide=1"></iframe>
                      <% end %>
                    </div>
                    <div class="video-description">
                      <%= link_to video.name, '#' %>
                    </div>
                  </div>
              <% end %>
              <div class="ads-list">
                <% @banners.each do |banner| %>
                    <div class="ad">
                      <%= link_to '#' do %>
                          <%= image_tag banner.photo.url %>
                      <% end %>
                    </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
