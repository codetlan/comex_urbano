<%= form_for @landing_page, :html => {:multipart => true, :class => 'form-horizontal validate-form-js', multipart: true} do |f| %>

    <% if @landing_page.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@landing_page.errors.count, "error") %> prohibited this landing_page from being saved:</h2>

          <ul>
            <% @landing_page.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="form-group">
      <%= f.label :facebook, 'Facebook:', class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <div class="input-group">
          <div class="input-group-addon"><i class="fa fa-facebook"></i></div>
          <%= f.text_field :facebook, class: 'form-control', required: 'required', url: 'true' %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :twitter, 'Twitter:', class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <div class="input-group">
          <div class="input-group-addon"><i class="fa fa-twitter"></i></div>
          <%= f.text_field :twitter, class: 'form-control', required: 'required', url: 'true' %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :youtube, 'Youtube:', class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <div class="input-group">
          <div class="input-group-addon"><i class="fa fa-youtube"></i></div>
          <%= f.text_field :youtube, class: 'form-control', required: 'required', url: 'true' %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :vimeo, 'Instagram:', class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <div class="input-group">
          <div class="input-group-addon"><i class="fa fa-instagram"></i></div>
          <%= f.text_field :vimeo, class: 'form-control', required: 'required', url: 'true' %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :copyright, 'Copyright:', class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :copyright, class: 'form-control', required: 'required' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :terms, 'Terminos y Condiciones:', class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :terms, class: 'form-control', required: 'required' %>
      </div>
    </div>

    <br><br>
    <div>
      <div class="clearfix">
        <div class="pull-left">
          <h3>Agregar Banners</h3>
        </div>
        <div class="pull-right">
          <%= link_to_add_fields "Agregar Banner", f, :images %>
        </div>
      </div>
      <br>
      <div id="banners-items">
        <%= f.fields_for :images do |builder| %>
          <%= render 'image_fields', f: builder %>
        <% end %>
      </div>
    </div>

    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
    <br><br>
    
<% end %>