<fieldset class="panel panel-default">
  <div class="panel-body">
    <div class="form-group">
      <%= f.label :name, 'Nombre:', class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :name, class: 'form-control', required: 'required' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :description, 'Descripción:', class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_area :description, class: 'form-control', required: 'required' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :link, 'Link:', class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :link, class: 'form-control', required: 'required', url: 'true' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :position, 'Posición: <i class="rqrd">*</i>'.html_safe, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.number_field :position, class: 'form-control', required: true %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :photo, 'Imagen:', class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.file_field :photo, :onchange => "readURL(this);", class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-2 control-label"></div>
      <div class="col-sm-10">
        <%= image_tag f.object.photo.url(:principal), :id => "preview-photo" %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.hidden_field :_destroy %>
        <%= link_to "Eliminar Banner", "#", class: "remove_fields" %>
      </div>
    </div>
  </div>
</fieldset>
<script>

    function readURL(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();

            reader.onload = function (e) {
                $('#preview-photo')
                        .attr('src', e.target.result);
            };

            reader.readAsDataURL(input.files[0]);
        }
    }
</script>