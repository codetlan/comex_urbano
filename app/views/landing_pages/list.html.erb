<table>
  <thead>
  <tr>
    <th>Facebook</th>
    <th>Twitter</th>
    <th>Youtube</th>
    <th>Vimeo</th>
    <th>Copyright</th>
    <th>Terms</th>
    <th></th>
    <th></th>
  </tr>
  </thead>

  <tbody>
  <% @landing_pages.each do |landing_page| %>
      <tr>
        <td><%= landing_page.facebook %></td>
        <td><%= landing_page.twitter %></td>
        <td><%= landing_page.youtube %></td>
        <td><%= landing_page.vimeo %></td>
        <td><%= landing_page.copyright %></td>
        <td><%= landing_page.terms %></td>
        <% landing_page.banners.each do |banner| %>
            <td><%= image_tag banner.photo.url(:thumb) %></td>
        <% end %>
        <td><%= link_to 'Edit', edit_landing_page_path(landing_page) %></td>
        <!--<td><= link_to 'Destroy', landing_page, method: :delete, data: {confirm: 'Are you sure?'} %></td>-->
      </tr>
  <% end %>
  </tbody>
</table>

<div class="row">
  <% @landing_pages.banners.each do |banner| %>
      <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
          <%= image_tag banner.photo.url %>
          <div class="caption">
            <h3><%= banner.name %></h3><br>
            <p><%= banner.description.html_safe %> <br>
              Visitas: <%= video.visit %> <br>
              Publicado: <%= video.active %></p>
            <div class="btn-group btn-group-xs">
             <%= link_to edit_landing_page_path(landing_page), class: "btn btn-default btn-lg" do %>
                   <span class="glyphicon glyphicon-pencil"></span>
               <% end %>
            </div>
          </div>
        </div>
      </div>
  <% end %>
</div>
