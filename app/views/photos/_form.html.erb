<%= form_for(@photo, html: {role: "form", class: "form-horizontal"}) do |f| %>
    <% if @photo.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@photo.errors.count, "error") %> prohibited this photo from being saved:</h2>

          <ul>
            <% @photo.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="form-group">
      <%= f.label :name, 'Titulo:', class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :name, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :description, 'Descripción:', class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_area :description, :class => "ckeditor form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :image, 'Imagen:', class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.file_field :image, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :section_id, 'Categoria:', class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.select :section_id, @section.collect { |p| [p.title, p.id] }, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :tag_list, 'Tags:', class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :tag_list, :class => 'form-control' %>
        <p>Tags separadas por coma (,).</p>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :posted_at, 'Fecha de publicación:', class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :posted_at, class: 'form-control datepicker', value: (@photo.posted_at.blank? ? '' : @photo.posted_at.strftime('%d-%m-%Y')) %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :active, 'Activo:', class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.number_field :active, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= link_to 'Cancelar', photos_path, class: "btn btn-default" %>
        <button type="submit" class="btn btn-primary">Publicar fotografía</button>
      </div>
    </div>
<% end %>
