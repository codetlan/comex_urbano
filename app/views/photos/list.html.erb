          </li>
          <li>
            <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>
          </li>
        </ul>
      </div>
    </div>
    <div class="col col-10">
      <div class="col-inner">
        <%= link_to 'Nueva Imagen', new_photo_path %>

        <br><br>

        <table>
          <thead>
          <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Image</th>
            <th></th>
            <th></th>
            <th></th>
          </tr>
          </thead>

          <tbody>
          <% @photos.each do |photo| %>
              <tr>
                <td><%= photo.name %></td>
                <td><%= photo.description %></td>
                <td><%= image_tag photo.image.url(:square) %></td>
                <td><%= link_to 'Edit', edit_photo_path(photo) %></td>
                <td><%= link_to 'Destroy', photo, method: :delete, data: {confirm: 'Are you sure?'} %></td>
              </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
