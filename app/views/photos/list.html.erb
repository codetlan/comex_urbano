<div class="wrapper">
  <div class="cols-12">
    <div class="col col-2">
      <div class="col-inner">
        <ul>
          <li>
            <%= link_to 'Home', '/admin/landing_pages' %>
          </li>
          <li>
            <%= link_to 'Videos', '/admin/videos' %>
          </li>
          <li>
            <%= link_to 'Galeria', '/admin/photos' %>
          </li>
          <li>
            <%= link_to 'Blog', '/admin/posts' %>
