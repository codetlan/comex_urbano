<% set_meta_tags title: @photo.name,
                description: @photo.description,
                og: {
                  title: @photo.name,
                  description: @photo.description,
                  image: @photo.image.url(:photo_show),
                  url: request.original_url
                }
%>

<div class="post-show-header-wrap">
  <div class="wrapper">
    <div class="cols-12">
      <div class="col col-12">
        <div class="col-inner">
          <div class="post-show-video">
            <div class="video">
              <%= image_tag @photo.image.url(:photo_show) %>
            </div>
            <div class="post-desc">
              <div class="post-desc-inner">
                <h1><%= @photo.name %></h1>
                <p><%= @photo.description.present? ? truncate_html(@photo.description.html_safe) : '' %></p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<% fb_url = "https://www.facebook.com/dialog/share?app_id=596902290420493&display=popup&href=#{request.original_url}&redirect_uri=#{request.original_url}" %>
<% tw_url = "https://twitter.com/intent/tweet?url=#{URI.encode(request.original_url)}&text=#{URI.encode(@photo.name)}&via=PinturasComex" %>

<%= render partial: 'shared/post_share_links', locals: { fb_url: fb_url, tw_url: tw_url, title: @photo.name, sumary: @photo.description, image: @photo.image.url(:photo_show) } %>

<%= render partial: 'shared/section_youtube_subscribe' %>
<div class="main-content">
  <div class="wrapper">
    <div class="cols-12">
      <div class="col col-9">
        <div class="col-inner">
          <div class="title-page">
            <h1><%= @photo.name %></h1>
          </div>
          <p><%= @photo.description.present? ? @photo.description.html_safe : '' %></p>

          <div class="post-meta">
            <div class="tags">
              Tags:
              <%= raw @photo.tag_list.map { |t| link_to t, search_path(:name => t) }.join(', ') %>
            </div>
            <div class="share-links">
              <span class='st_fblike_hcount' displayText='Facebook Like'></span>
              <span class='st_twitter_hcount' displayText='Tweet'></span>
              <span class='st_sharethis_hcount' displayText='ShareThis'></span>
            </div>
          </div>
        </div>
      </div>
      <div class="col col-3">
        <div class="col-inner">
          <div class="sidebar">
            <%= render partial: 'shared/latest_videos', locals: { videos: true, banners: true } %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>