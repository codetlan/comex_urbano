<% set_meta_tags title: @photo.name,
                description: @photo.description.html_safe,
                og: {
                  title: @photo.name,
                  description: @photo.description.html_safe,
                  image: @photo.image.url(:photo_show),
                  url: request.original_url
                }
%>

<div class="post-show-header-wrap">
  <div class="wrapper">
    <div class="cols-12">
      <div class="col col-12">
        <div class="col-inner">
          <div class="post-show-video">
            <div class="video">
              <%= image_tag @photo.image.url(:photo_show) %>
            </div>
            <div class="post-desc">
              <div class="post-desc-inner">
                <h1><%= @photo.name %></h1>
                <p><%= @photo.description.present? ? truncate_html(@photo.description.html_safe) : '' %></p>
                <%= render partial: 'shared/post_share_links', locals: { url: photo_show_url(@photo), text: @photo.name, media_url: @photo.image.url(:photo_show).to_s, descri: truncate_html(@photo.description.html_safe) } %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="main-content">
  <div class="wrapper">
    <div class="cols-12">
      <div class="col col-9">
        <div class="col-inner">
          <div class="post-show-content">
            <%= render partial: 'shared/post_share_links', locals: { url: photo_show_url(@photo), text: @photo.name, media_url: @photo.image.url(:photo_show).to_s, descri: truncate_html(@photo.description.html_safe) } %>
            <h1 class="post-show-title"><%= @photo.name %></h1>
            <span class="post-show-date"><%= blog_date @photo.created_at %></span>
            <p><%= @photo.description.present? ? @photo.description.html_safe : '' %></p>
            <%= render partial: 'shared/post_share_links', locals: { url: photo_show_url(@photo), text: @photo.name, media_url: @photo.image.url(:photo_show).to_s, descri: truncate_html(@photo.description.html_safe) } %>
            <div class="post-meta">
              <div class="tags">
                Tags:
                <%= raw @photo.tag_list.map { |t| link_to t, search_path(:name => t) }.join(', ') %>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="col col-3">
        <div class="col-inner">
          <div class="sidebar">
            <%= render partial: 'shared/youtube_subscribe' %>
            <%= render partial: 'shared/latest_videos', locals: { videos: false, banners: true } %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%= render partial: 'shared/similar_publications' %>