<%= form_for(@post, html: { role: "form", class: "form-horizontal" }) do |f| %>
    <% if @post.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

          <ul>
            <% @post.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="form-group">
      <%= f.label :title, 'Titulo:', class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :title, class: 'form-control', required: 'required' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :introduction, 'Introducción:', class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_area :introduction, class: 'form-control', required: 'required' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :description, 'Contenido:', class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_area :description, :class => 'form-control ckeditor' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :image, 'Imagen:', class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.file_field :image, :class => 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :tag_list, 'Tags:', class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :tag_list, :class => 'form-control' %>
        <p>Tags separadas por coma (,).</p>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :posted_at, 'Fecha de publicación:', class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :posted_at, class: 'form-control datepicker', value: (@post.posted_at.blank? ? '' : @post.posted_at.strftime('%d-%m-%Y')) %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :active, 'Activo:', class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.number_field :active, :class => 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <button type="submit" class="btn btn-primary">Publicar Entrada</button>
      </div>
    </div>

<% end %>
