<div class="section-heading">
  <div class="wrapper">
    <div class="cols-12">
      <div class="col col-12">
        <div class="col-inner">
        	<div class="section-heading-content">
        		<div class="section-heading-description">
        			<div class="section-heading-description-inner">
        				<p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Fusce quis adipiscing nibh, ut tincidunt quam. Praesent ut congue enim. Nulla sed ultrices nun</p>
        			</div>
	        	</div>
	          <%= image_tag 'sections/blog-section.jpg' %>
        	</div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="filters-wrap">
  <div class="wrapper">
    <div class="cols-12">
      <div class="col col-12">
        <div class="col-inner">
          <div class="filters">
            <div class="page-navigation">
              <ul>
                <li>
                  <%= link_to 'Ultimos videos', '#', class: 'active' %>
                </li>
                <li>
                  <%= link_to 'Más vistos', '#' %>
                </li>
              </ul>
            </div>
            <div class="years-timeline">
              <ul>
                <li>
                  <%= link_to '2014', '#', class: 'active' %>
                </li>
                <li>
                  <%= link_to '2013', '#' %>
                </li>
                <li>
                  <%= link_to '2012', '#' %>
                </li>
                <li>
                  <%= link_to '2011', '#' %>
                </li>
                <li>
                  <%= link_to '2010', '#' %>
                </li>
                <li>
                  <%= link_to '2009', '#' %>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="main-content">
  <div class="wrapper">
    <div class="cols-12">
      <div class="col col-9">
        <div class="col-inner">
          <div class="title-page">
            <h1>BLOG</h1>
          </div>
          <div class="posts-list">
            <% @posts.each do |post| %>
                <div class="post">
                  <div class="post-image">
                    <%= link_to '/posts/'+post.id.to_s do %>
                        <%= image_tag post.image.url %>
                    <% end %>
                  </div>
                  <div class="post-description">
                    <div class="post-va">
                      <a href="/posts/<%= post.id.to_s %>" class="post-title"><%= post.title %></a>
                      <span class="post-date">11 sep 2014</span>

                      <p><%= truncate_html(post.introduction, 189, '-') %></p>
                      <a class="post-read-more" href="/posts/<%= post.id.to_s %>">Leer más</a>
                    </div>
                  </div>
                </div>
            <% end %>
          </div>
        </div>
      </div>
      <div class="col col-3">
        <div class="col-inner">
          <div class="sidebar">
            <%= render partial: 'shared/youtube_subscribe' %>
            <%= render partial: 'shared/latest_videos', locals: { videos: true, banners: true } %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
