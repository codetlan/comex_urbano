<div class="hero-intro">
  <div class="slider-wrap">
    <div class="slider-pager"></div>
      <div class="slider">
      <% home_details.each do |landing_page| %>
          <% landing_page.images.each do |banner| %>
              <div class="featured-post" style="height: auto;">
                <%= link_to banner.link do %>
                  <div class="image" style="background-image: url('<%= banner.photo.url(:principal) %>');">
                  </div>
                <% end %>
                <div class="description">
                  <div class="wrapper">
                    <div class="cols-12">
                      <div class="col col-12">
                        <div class="col-inner">
                          <div class="category">
                            <%= link_to banner.link do %>
                                <p><%= banner.name %></p>
                            <% end %>
                          </div>
                          <div class="title">
                            <%= link_to banner.link do %>
                                <p><%= banner.description %></p>
                            <% end %>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
          <% end %>
      <% end %>
    </div>
  </div>
</div>

<div class="filters-wrap">
  <div class="wrapper">
    <div class="cols-12">
      <div class="col col-12">
        <div class="col-inner">
          <div class="filters">
            <div class="page-navigation">
              <ul>
                <li>
                  <%= link_to 'Últimos', '/posts', class: request.fullpath == '/posts' ? 'active' : '' %>
                </li>
                <li>
                  <%= link_to 'Más vistos', posts_section_path(:section_id => @section.id, :visit => true), class: @visit == 'true' ? 'active' : '' %>
                </li>
              </ul>
            </div>
            <div class="years-timeline">
              <ul>
                <li>
                  <%= link_to '2014', posts_section_path(:section_id => @section.id, :year => 2014), class: @year == '2014' ? 'active' : '' %>
                </li>
                <li>
                  <%= link_to '2013', posts_section_path(:section_id => @section.id, :year => 2013), class: @year == '2013' ? 'active' : '' %>
                </li>
                <li>
                  <%= link_to '2012', posts_section_path(:section_id => @section.id, :year => 2012), class: @year == '2012' ? 'active' : '' %>
                </li>
                <li>
                  <%= link_to '2011', posts_section_path(:section_id => @section.id, :year => 2011), class: @year == '2011' ? 'active' : '' %>
                </li>
                <li>
                  <%= link_to '2010', posts_section_path(:section_id => @section.id, :year => 2010), class: @year == '2010' ? 'active' : '' %>
                </li>
                <li>
                  <%= link_to '2009', posts_section_path(:section_id => @section.id, :year => 2009), class: @year == '2009' ? 'active' : '' %>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="main-content">
  <div class="wrapper">
    <div class="cols-12">
      <div class="col col-9">
        <div class="col-inner">
          <div class="title-page">
            <h1>BLOG</h1>
          </div>
          <div class="posts-list">
            <% @posts.each do |post| %>
                <div class="post">
                  <div class="post-image">
                    <%= link_to '/posts/'+post.id.to_s do %>
                        <%= image_tag post.image.url(:post) %>
                    <% end %>
                  </div>
                  <div class="post-description">
                    <div class="post-va">
                      <a href="/posts/<%= post.id.to_s %>" class="post-title"><%= post.title %></a>
                      <span class="post-date"><%= blog_date post.posted_at %></span>

                      <p><%= truncate_html(post.introduction, 189, '-') %></p>
                      <a class="post-read-more" href="/posts/<%= post.id.to_s %>">Leer más</a>
                      <div class="post-share">
                          <div class="addthis_native_toolbox" data-url="<%= post_url(post) %>" data-title="<%= post.title %>"></div>
                        </div>
                    </div>
                  </div>
                </div>
            <% end %>
          </div>
        </div>
      </div>
      <div class="col col-3">
        <div class="col-inner">
          <div class="sidebar">
            <%= render partial: 'shared/youtube_subscribe' %>
            <%= render partial: 'shared/latest_videos', locals: {videos: false, banners: true} %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
