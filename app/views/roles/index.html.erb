<p id="notice"><%= notice %></p>

<div class="clearfix admin-head">
  <div class="pull-left">
    <h1>Roles</h1>

    <p>Roles de Usuarios.</p>
  </div>
  <div class="pull-right">
    <% if can? :create, Role %>
        <%= link_to new_role_path, class: "btn btn-primary" do %>
            <span class="glyphicon glyphicon-pencil">Nuevo</span>
        <% end %>
    <% end %>
  </div>
</div>

<table class="table table-striped table-hover">
  <thead>
  <tr>
    <th>Nombre</th>
    <th>Descripci√≥n</th>
    <th>Publicado</th>
    <th></th>
  </tr>
  </thead>

  <tbody>
  <% @roles.each do |role| %>
      <tr>
        <td><%= role.name %></td>
        <td><%= role.description %></td>
        <td><%= role.active == 1 ? 'Si' : 'No' %></td>
        <td>
          <div class="btn-group btn-group-xs">
            <% if can? :update, Role %>
                <%= link_to edit_role_path(role), class: "btn btn-default btn-lg" do %>
                    <span class="glyphicon glyphicon-pencil"></span>
                <% end %>
            <% end %>
            <% if can? :destroy, Category %>
                <%= link_to role, method: :delete, data: {confirm: 'Are you sure?'}, class: "btn btn-default btn-lg" do %>
                    <span class="glyphicon glyphicon-trash"></span>
                <% end %>
            <% end %>
          </div>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>