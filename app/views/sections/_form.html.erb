<%= form_for(@section, html: { role: "form", class: "form-horizontal validate-form-js" }) do |f| %>
    <% if @section.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@section.errors.count, "error") %> prohibited this section from being saved:</h2>

          <ul>
            <% @section.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="form-group">
      <%= f.label :title, 'Titulo: <i class="rqrd">*</i>'.html_safe, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :title, class: 'form-control', required: true %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :description, 'Descripción: <i class="rqrd">*</i>'.html_safe, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_area :description, class: 'form-control ckeditor', required: true %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :main_banner, 'Banner Principal: <i class="rqrd">*</i>'.html_safe, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.file_field :main_banner, class: 'form-control', required: true %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :category_id, 'Categoria: <i class="rqrd">*</i>'.html_safe, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.select :category_id, Category.all.collect {|p| [p.name, p.id]}, class: 'form-control', required: true %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :active, 'Publicar: <i class="rqrd">*</i>'.html_safe, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <div class="radio">
          <label>
            <%= f.radio_button :active, '1', required: true %>
            Si
          </label>
        </div>
        <div class="radio">
          <label>
            <%= f.radio_button :active, '0', required: true %>
            No
          </label>
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= link_to 'Cancelar', sections_path, class: "btn btn-default" %>
        <button type="submit" class="btn btn-primary">Publicar Sección</button>
      </div>
    </div>
<% end %>
