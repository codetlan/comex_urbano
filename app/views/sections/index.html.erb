<div class="clearfix admin-head">
  <div class="pull-left">
    <h1>Subcategorias del Menu</h1>

    <p>Nos permite crear subcategorias al menu.</p>
  </div>
  <div class="pull-right">
    <%= link_to new_section_path, class: "btn btn-primary" do %>
        <span class="glyphicon glyphicon-pencil">Nuevo</span>
    <% end %>
  </div>
</div>

<table class="table table-striped table-hover">
  <h3>Videos</h3>
  <thead>
  <tr>
    <th>Title</th>
    <th>Banner</th>
    <th>Categoria</th>
    <th>Activo</th>
    <th></th>
    <th></th>
  </tr>
  </thead>

  <tbody>
  <% @sections_videos.each do |section| %>
      <tr>
        <td><%= section.title %></td>
        <td><%= image_tag section.main_banner.url(:medium) %></td>
        <td><%= section.category.present? ? section.category.name : '' %></td>
        <td><%= section.active == 1 ? 'Si' : 'No' %></td>
        <td>
          <div class="btn-group btn-group-xs">
            <%= link_to edit_section_path(section), class: "btn btn-default btn-lg" do %>
                <span class="glyphicon glyphicon-pencil"></span>
            <% end %>
            <%= link_to section, method: :delete, data: {confirm: 'Are you sure?'}, class: "btn btn-default btn-lg" do %>
                <span class="glyphicon glyphicon-trash"></span>
            <% end %>
          </div>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>


