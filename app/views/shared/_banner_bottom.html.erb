<% site_banners.each do |banner| %>
    <% if banner.position == 0 %>
        <div class="banner-bottom">
          <div class="wrapper">
            <div class="cols-12">
              <div class="col col-12">
                <div class="col-inner">
                  <%= link_to image_tag(banner.photo.url(:bottom)), banner.link, :target => '_blank' %>
                </div>
              </div>
            </div>
          </div>
        </div>
    <% end %>
<% end %>
