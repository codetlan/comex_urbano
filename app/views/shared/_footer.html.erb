
<div class="footer">
  <div class="footer-navigation">
    <div class="wrapper">
      <div class="cols-12">
        <div class="col col-12">
          <div class="col-inner">
            <ul>
              <% menu.each do |category| %>
                  <li class="footer-nav-item"><%= link_to category.name, '/' + category.link, class: request.fullpath == '/' + category.link ? 'active' : '' %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="footer-links-rights">
    <div class="wrapper">
      <div class="cols-12">
        <div class="col col-12">
          <div class="col-inner">
            <% home_details.each do |landing_page| %>
                <div class="footer-links">
                  <%= link_to image_tag('fb-black.png'), landing_page.facebook, :target => '_blank' %>
                  <%= link_to image_tag('youtube-black.png'), landing_page.youtube, :target => '_blank' %>
                  <%= link_to image_tag('instagram-black.png') %>
                </div>
                <div class="footer-rights">
