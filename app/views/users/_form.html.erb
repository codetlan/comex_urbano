<%= form_for(@user, html: {role: "form", class: "form-horizontal"}) do |f| %>
    <% if @user.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@user.errors.count, "error") %> prohibited this role from being saved:</h2>

          <ul>
            <% @user.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="form-group">
      <%= f.label :email, 'Email:', class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :email, class: 'form-control', required: 'required' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :password, 'Contraseña:', class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :password, class: 'form-control', required: 'required', type: 'password' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, 'Confirmar Contraseña:', class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :password_confirmation, class: 'form-control', required: 'required', type: 'password' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :roles, 'Roles:', class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <% for role in Role.all %>
            <div class="radio">
              <label>
                <%= check_box_tag "user[role_ids][]", role.id, @user.roles.include?(role) %>
                <%= h role.name %>
              </label>
            </div>
        <% end %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= link_to 'Cancelar', users_path, class: "btn btn-default" %>
        <button type="submit" class="btn btn-primary">Guardar Usuario</button>
      </div>
    </div>
<% end %>
