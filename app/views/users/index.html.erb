<div class="clearfix admin-head">
  <div class="pull-left">
    <h1>Usuarios</h1>

    <p>Lista de Usuarios.</p>
  </div>
  <div class="pull-right">
    <% if can? :create, @user %>
        <%= link_to new_user_path, class: "btn btn-primary" do %>
            <span class="glyphicon glyphicon-pencil">Nuevo</span>
        <% end %>
    <% end %>
  </div>
</div>


<table class="table table-striped table-hover">
  <thead>
  <tr>
    <th>Email</th>
    <th>Rol</th>
    <th></th>
  </tr>
  </thead>

  <tbody>
  <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td>
          <% user.roles.each do |role| %>
              <%= role.name %>
          <% end %>
        </td>
        <td>
          <div class="btn-group btn-group-xs">
            <% if can? :create, @user %>
                <%= link_to edit_user_path(user), class: "btn btn-default btn-lg" do %>
                    <span class="glyphicon glyphicon-pencil"></span>
                <% end %>
            <% end %>
            <% if can? :create, @user %>
                <%= link_to user, method: :delete, data: {confirm: 'Are you sure?'}, class: "btn btn-default btn-lg" do %>
                    <span class="glyphicon glyphicon-trash"></span>
                <% end %>
            <% end %>
          </div>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>
