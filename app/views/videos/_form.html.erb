<%= form_for(@video, html: {role: "form", class: "form-horizontal"}) do |f| %>
    <% if @video.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@video.errors.count, "error") %> prohibited this video from being saved:</h2>

          <ul>
            <% @video.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="form-group">
      <%= f.label :name, 'Titulo:', class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :name, class: 'form-control', required: 'required' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :description, 'Descripción:', class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :description, class: 'form-control', required: 'required' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :content, 'Contenido:', class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_area :content, :class => "ckeditor" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :link, 'Link:', class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :link, class: 'form-control', required: 'required' %>
        <p class="text-muted">Ejemplo: https://www.youtube.com/watch?v=40BpaypwA7o</p>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :section_id, 'Sección:', class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.select :section_id, @section.collect { |p| [p.title, p.id] }, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :posted_at, 'Fecha de publicación:', class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :posted_at, class: 'form-control datepicker', value: (@video.posted_at.blank? ? '' : @video.posted_at.strftime('%d-%m-%Y')) %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :tag_list, 'Tags:', class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :tag_list, :class => 'form-control' %>
        <p>Tags separadas por coma (,).</p>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :active, 'Activo:', class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.number_field :active, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= link_to 'Cancelar', videos_path, class: "btn btn-default" %>
        <button type="submit" class="btn btn-primary">Publicar video</button>
      </div>
    </div>
<% end %>
