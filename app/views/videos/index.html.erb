<% @section.each do |section| %>
    <div class="section-heading">
      <div class="wrapper">
        <div class="cols-12">
          <div class="col col-12">
            <div class="col-inner">
              <%= image_tag section.main_banner.url(:original) %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="filters-wrap">
      <div class="wrapper">
        <div class="cols-12">
          <div class="col col-12">
            <div class="col-inner">
              <div class="filters">
                <div class="page-navigation">
                  <ul>
                    <li>
                      <%= link_to 'Ultimos videos', '#', class: 'active' %>
                    </li>
                    <li>
                      <%= link_to 'MÃ¡s vistos', '#' %>
                    </li>
                  </ul>
                </div>
                <div class="years-timeline">
                  <ul>
                    <li>
                      <%= link_to '2014', '#', class: 'active' %>
                    </li>
                    <li>
                      <%= link_to '2013', '#' %>
                    </li>
                    <li>
                      <%= link_to '2012', '#' %>
                    </li>
                    <li>
                      <%= link_to '2011', '#' %>
                    </li>
                    <li>
                      <%= link_to '2010', '#' %>
                    </li>
                    <li>
                      <%= link_to '2009', '#' %>
                    </li>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <%= render partial: 'shared/section_youtube_subscribe' %>
    <div class="videos-list">
      <div class="wrapper">
        <div class="cols-12">
          <% section.videos.each do |video| %>
              <div class="col col-4">
                <div class="col-inner">
                  <div class="video-box">
                    <div class="video">
                      <%= link_to '/videos/'+video.id.to_s do %>
                          <!--<i class="i play"></i>-->
                              <iframe width="100%" height="100%" src="<%= video.link_embed(video.link) %>?&showinfo=0&autohide=1" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>
                      <% end %>
                    </div>
                    <div class="video-description">
                      <%= link_to '/videos/'+video.id.to_s do %>
                          <h3><%= video.name %></h3>
                          <%= truncate_html(video.description) %>
                      <% end %>
                    </div>
                  </div>
                </div>
              </div>
          <% end %>
        </div>
      </div>
    </div>

    <div class="wrapper">
      <div class="cols-12">
        <div class="col col-12">
          <div class="col-inner">
            <div class="title-page">
              <h1><%= section.title %></h1>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="main-content">
      <div class="wrapper">
        <div class="cols-12">
          <div class="col col-9">
            <div class="col-inner">
              <!--<= image_tag 'sections/arte-urbano.jpg' %>-->
              <%= section.description.html_safe %>
            </div>
          </div>
          <div class="col col-3">
            <div class="col-inner">
              <div class="sidebar">
                <%= render partial: 'shared/latest_videos', locals: { videos: false, banners: true } %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
<% end %>