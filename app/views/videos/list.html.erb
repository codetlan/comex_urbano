<div class="clearfix">
  <div class="pull-left">
    <h2>Videos</h2>
    <p>Agrega videos a la secci√≥n de videos.</p> 
  </div>
  <div class="pull-right">
    <%= link_to new_video_path, class: "btn btn-primary" do %>
      <span class="glyphicon glyphicon-plus">Nuevo</span>
    <% end %>
  </div>
</div>


<br><br>

<table class="table table-striped">
  <thead>
  <tr>
    <th>Titulo</th>
    <th>Link</th>
    <th>Visitas</th>
    <th>Activo</th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  <% @videos.each do |video| %>
      <tr>
        <td><%= video.name %></td>
        <td><%= video.link_embed(video.link) %></td>
        <td><%= video.visit %></td>
        <td><%= video.active %></td>
        <td>
          <div class="btn-group btn-group-sm">
            <%= link_to '/admin/videos/' + video.id.to_s + '/edit', class: "btn btn-default btn-lg" do %>
              <span class="glyphicon glyphicon-pencil"></span> Editar
            <% end %>
            <%= link_to video, method: :delete, data: {confirm: 'Are you sure?'}, class: "btn btn-default btn-lg" do %>
              <span class="glyphicon glyphicon-trash"></span> Borrar
            <% end %>
          </div>
        </td>
    
      </tr>
  <% end %>
  </tbody>
</table>



