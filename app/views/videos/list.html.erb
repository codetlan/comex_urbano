<%= link_to 'Nuevo video', new_video_path %>

<br><br>

<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Link</th>
    <th>Visit</th>
    <th>Active</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  </thead>

  <tbody>
  <% @videos.each do |video| %>
      <tr>
        <td><%= video.name %></td>
        <td><%= video.description.html_safe %></td>
        <td>
          <iframe width="300" height="200" src="<%= video.link_embed(video.link) %>"></iframe>
        </td>
        <td><%= video.visit %></td>
        <td><%= video.active %></td>
        <td><%= link_to 'Edit', '/admin/videos/' + video.id.to_s + '/edit' %></td>
        <td><%= link_to 'Destroy', video, method: :delete, data: {confirm: 'Are you sure?'} %></td>
      </tr>
  <% end %>
  </tbody>
</table>



