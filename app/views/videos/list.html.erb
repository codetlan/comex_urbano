<div class="wrapper">
  <div class="cols-12">
    <div class="col col-2">
      <div class="col-inner">
        <ul>
          <li>
            <%= link_to 'Videos', '/admin/videos/list' %>
          </li>
          <li>
            <%= link_to 'Galeria', '/admin/photos/list' %>
          </li>
          <li>
            <%= link_to 'Blog', '/admin/posts/list' %>
          </li>
          <li>
            <%= link_to 'Categorias', '/categories/new' %>
          </li>
          <li>
            <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>
          </li>
        </ul>
      </div>
    </div>
    <div class="col col-10">
      <div class="col-inner">
        <%= link_to 'Nuevo video', new_video_path %>

        <br><br>

        <table>
          <thead>
          <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Link</th>
            <th>Visit</th>
            <th>Active</th>
            <th></th>
            <th></th>
            <th></th>
          </tr>
          </thead>

          <tbody>
          <% @videos.each do |video| %>
              <tr>
                <td><%= video.name %></td>
                <td><%= video.description %></td>
                <td>
                  <iframe width="300" height="200" src="<%= video.youtube_embed(video.link) %>"></iframe>
                </td>
                <td><%= video.visit %></td>
                <td><%= video.active %></td>
                <td><%= link_to 'Edit', '/admin/videos/' + video.id.to_s + '/edit' %></td>
                <td><%= link_to 'Destroy', video, method: :delete, data: {confirm: 'Are you sure?'} %></td>
              </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>


